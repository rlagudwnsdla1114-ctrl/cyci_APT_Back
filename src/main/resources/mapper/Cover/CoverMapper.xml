<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.soft.apt.mapper.CoverMapper">


    <select id="userInfo" resultType="CoverInfoDTO" parameterType="int">
        select
            c.JOBSEEKER_NAME,
            c.JOBSEEKER_BIRTH,
            c.JOBSEEKER_EMAIL,
            c.JOBSEEKER_PHONE
        from
            jobseeker_users c
        where
            c.JOBSEEKER_IDX = #{userIdx}
    </select>
</mapper>